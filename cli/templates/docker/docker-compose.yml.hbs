version: '3.8'

services:
{{#if includeBackend}}
  backend:
    build:
      context: ./backend
      dockerfile: ../docker/Dockerfile.backend
    ports:
      - "3000:3000"
    environment:
      - NODE_ENV=development
      - PORT=3000
{{#if (eq database 'PostgreSQL')}}
      - DB_HOST=postgres
      - DB_PORT=5432
      - DB_NAME={{projectName}}_db
      - DB_USER=postgres
      - DB_PASSWORD=postgres
{{/if}}
    volumes:
      - ./backend:/app
      - /app/node_modules
{{#if (eq database 'PostgreSQL')}}
    depends_on:
      - postgres
{{/if}}
{{/if}}

{{#if includeFrontend}}
  frontend:
    build:
      context: ./frontend
      dockerfile: ../docker/Dockerfile.frontend
    ports:
      - "5173:5173"
    environment:
      - VITE_API_URL=http://localhost:3000
    volumes:
      - ./frontend:/app
      - /app/node_modules
{{#if includeBackend}}
    depends_on:
      - backend
{{/if}}
{{/if}}

{{#if (eq database 'PostgreSQL')}}
  postgres:
    image: postgres:16-alpine
    environment:
      - POSTGRES_DB={{projectName}}_db
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=postgres
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
{{/if}}

{{#if (eq database 'MongoDB')}}
  mongodb:
    image: mongo:7
    environment:
      - MONGO_INITDB_DATABASE={{projectName}}
    ports:
      - "27017:27017"
    volumes:
      - mongo_data:/data/db
{{/if}}

volumes:
{{#if (eq database 'PostgreSQL')}}
  postgres_data:
{{/if}}
{{#if (eq database 'MongoDB')}}
  mongo_data:
{{/if}}
